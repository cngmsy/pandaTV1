<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/fogetimg"
            android:layout_marginTop="14px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_back_img"
            android:layout_marginLeft="20px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/titleTv"
            android:text="忘记密码"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="只支持手机号注册用户找回密码"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/forget_mailbox"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="30px"
            android:background="#fff"
            android:hint="请输入注册时的手机号"
            android:textColorHint="#e8e8e8" />
        <TextView
            android:id="@+id/mailbox_null"
            android:visibility="invisible"
            android:layout_marginTop="10px"
            android:text="手机号码不能为空"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/forget_proving"
                android:layout_width="400px"
                android:layout_height="90px"
                android:layout_weight="1"
                android:background="#fff"
                android:hint="请输入图片验证码"
                android:textColorHint="#e8e8e8" />

            <ImageView
                android:background="#b7b7b7"
                android:id="@+id/forget_letter"
                android:layout_marginLeft="30px"
                android:layout_width="180px"
                android:layout_height="90px" />
        </LinearLayout>
        <TextView
            android:id="@+id/letter_null"
            android:visibility="invisible"
            android:layout_marginTop="10px"
            android:text="验证码不能为空"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/forget_validate"
                android:layout_width="400px"
                android:layout_height="90px"
                android:layout_weight="1"
                android:background="#fff"
                android:hint="请输入收到的验证码"
                android:textColorHint="#e8e8e8" />

            <Button
                android:id="@+id/forget_obtain"
                android:layout_marginLeft="30px"
                android:layout_width="180px"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/obtain_null"
            android:visibility="invisible"
            android:layout_marginTop="10px"
            android:text="验证码不能为空"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/forget_confirm"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="30px"
            android:background="#fff"
            android:hint="请设置新的密码"
            android:textColorHint="#e8e8e8" />
        <TextView
            android:id="@+id/confirm_null"
            android:visibility="invisible"
            android:layout_marginTop="10px"
            android:text="确认密码不能为空"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/forget_regist"
            android:textColor="#fff"
            android:text="找回密码"
            android:layout_marginTop="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            />
    </LinearLayout>
</LinearLayout>