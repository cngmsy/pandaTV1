<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海外用户暂不支持手机号注册，您可以使用邮箱注册"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/phone_account"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="30px"
            android:background="#fff"
            android:hint="账号:请输入手机账号"
            android:textColorHint="#e8e8e8" />
        <TextView
            android:id="@+id/phone_null"
            android:visibility="invisible"
            android:layout_marginTop="10px"
            android:text="手机号码不能为空"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phone_proving"
            android:layout_width="400px"
            android:layout_height="90px"
            android:layout_weight="1"
            android:background="#fff"
            android:hint="请输入图片验证"
            android:textColorHint="#e8e8e8" />

        <ImageView
            android:background="#b7b7b7"
            android:id="@+id/phone_letter"
            android:layout_marginLeft="30px"
            android:layout_width="180px"
            android:layout_height="90px" />
    </LinearLayout>
        <TextView
            android:id="@+id/proving_null"
            android:visibility="invisible"
            android:layout_marginTop="10px"
            android:text="手机号码不能为空"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phone_validate"
                android:layout_width="400px"
                android:layout_height="90px"
                android:layout_weight="1"
                android:background="#fff"
                android:hint="请输入图片验证"
                android:textColorHint="#e8e8e8" />

            <Button
                android:id="@+id/phone_obtain"
                android:layout_marginLeft="30px"
                android:layout_width="180px"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/obtain_null"
            android:visibility="invisible"
            android:layout_marginTop="10px"
            android:text="手机号码不能为空"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/phone_psd"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="30px"
            android:background="#fff"
            android:hint="请输入密码"
            android:textColorHint="#e8e8e8" />
        <TextView
            android:id="@+id/psd_null"
            android:visibility="invisible"
            android:layout_marginTop="10px"
            android:text="手机号码不能为空"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_marginTop="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/phone_checkbox"
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@drawable/selector_check"
                android:button="@null"
                android:checked="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:textColor="@color/colorPrimary"
                android:text="我已阅读并同意《央视网网络服务使用协议》"
                />
        </LinearLayout>
        <Button
            android:id="@+id/phone_regist"
            android:textColor="#fff"
            android:text="注册"
            android:layout_marginTop="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            />
    </LinearLayout>
</LinearLayout>