<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/file_img"
            android:layout_marginTop="14px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_back_img"
            android:layout_marginLeft="20px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/titleTv"
            android:text="熊猫TOP榜"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
        android:id="@+id/file_player"
        android:layout_width="match_parent"
        android:layout_height="400px"></fm.jiecao.jcvideoplayer_lib.JCVideoPlayer>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首播时间"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:textColor="#e8e8e8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:text="栏目介绍"
                />
            <ImageView
                android:id="@+id/file_up"
                android:layout_marginTop="18px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250px"
                android:src="@drawable/lpanda_show"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/file_liner"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/file_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="****"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20px"
        android:background="#fff"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高清播放"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            />
        <View
            android:layout_marginTop="10px"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#e8e8e8"
            ></View>
        <ListView
            android:id="@+id/file_listview"
            android:layout_marginTop="10px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</LinearLayout>