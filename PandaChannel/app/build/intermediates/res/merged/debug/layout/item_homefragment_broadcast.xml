<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="15px"
        android:text="熊猫播报"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E3E3E3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350px">

        <ImageView
            android:id="@+id/iv_homefragment_casthead"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:background="@mipmap/tab_panda_eye_normal" />

        <TextView
            android:id="@+id/tv_middleline"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80px"
            android:layout_toRightOf="@id/iv_homefragment_casthead"
            android:background="#E3E3E3" />

        <TextView
            android:id="@+id/tv_itemhomefragment_live"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_above="@id/tv_middleline"
            android:layout_alignLeft="@id/tv_middleline"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="20px"
            android:background="@drawable/homecasttext"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_itemfragment_livecontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignBottom="@id/tv_itemhomefragment_live"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/tv_itemhomefragment_live"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_itemhomefragment_find"
            android:layout_width="200px"
            android:layout_height="80px"
            android:layout_alignLeft="@id/tv_middleline"
            android:layout_below="@id/tv_middleline"
            android:layout_marginLeft="20px"
            android:layout_marginTop="15px"
            android:background="@drawable/homecasttext"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_itemfragment_findcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignTop="@id/tv_itemhomefragment_find"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/tv_itemhomefragment_find"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>